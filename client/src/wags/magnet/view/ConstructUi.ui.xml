<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:us='urn:import:wags.magnet.view'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	.directions_panel{
		-moz-border-radius: 5px;
		border-radius: 5px;
		font-family: "arial";
		background: #E6E6E6;
		padding-right: 1%;
		padding-left: 1%;
		margin-bottom: 10px;
		border: 1px solid AliceBlue;
	}
	.directions_content{
		margin-bottom: 1%;
	}
	.segment_panel{
	overflow: auto;
	}
	.base{
	margin-right: 20px;
	margin-left: 10px;
	}
	
	.margin-right{
	margin-right: 5px;
	}

	.percentage {
		height:100%;
	}
	
	</ui:style>
	
	<b:FluidRow ui:field="layout" addStyleNames="{style.percentage}">
	    <b:FluidRow>
	        <g:ScrollPanel styleName='{style.directions_panel}'>
	            <b:FluidRow ui:field="directionsContent" styleName='{style.directions_content}'>
	                
	            </b:FluidRow>
	        </g:ScrollPanel>
	    </b:FluidRow>
	    
	    
	</b:FluidRow>
</ui:UiBinder> 

