<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.files { 
			font-size: 24pt;
			font-weight: light;
			color: #A0A0FF;
			font-style: italic;
		}
		.bottom {
			
			padding-right: 10px;	
		}
		.fileName { padding: 0px; }
		.std-txt { padding-top: 6px }
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="30">
			<g:HTMLPanel>
				<g:Label styleName="{style.files}">Files</g:Label>
				<g:Tree ui:field="browser"></g:Tree>
			</g:HTMLPanel>
		</g:north>
		<g:south size = "30">
			<g:HTMLPanel styleName="{style.bottom}">
		     			<g:FormPanel ui:field="form">
			     			<g:HorizontalPanel>
			     				<g:SubmitButton ui:field="submitButton">Upload</g:SubmitButton>
			     				<g:FileUpload ui:field="uploadField" name="the_file"/>
			     				<g:Label styleName="{style.std-txt}">Upload Directory: </g:Label>
			     				<g:TextBox styleName="{style.fileName}" ui:field="curDir" name="curDir"></g:TextBox>
			     			</g:HorizontalPanel>
		     			</g:FormPanel>
		     </g:HTMLPanel>
	     </g:south>
     </g:DockLayoutPanel>
</ui:UiBinder> 