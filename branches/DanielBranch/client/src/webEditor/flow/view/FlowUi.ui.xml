<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.base_panel{
	min-height:100%;
	min-width:100%;
	}
		
	</ui:style>

	<g:LayoutPanel ui:field="layout" styleName='{style.base_panel}'>
		<g:layer left='0%' right='55%'>
			<g:AbsolutePanel ui:field="canvasPanel"></g:AbsolutePanel>
		</g:layer>
		<g:layer right='0%' left='45%'>
			<g:AbsolutePanel ui:field="segmentsPanel"></g:AbsolutePanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 