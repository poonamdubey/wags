<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.label {
			padding-top: 8px;
			text-align: left;
			padding-right: 10px;
			width: 80px;
		}
		.strange{
			padding-top: 8px;
			padding-right: 10px;	
		}
		.filePanel {
			height: 35px;
			text-align: center;	
		}
		.heading{
			padding-top: 20px;
			padding-bottom: 20px;
			padding-left: 80px;
			font-size: 	x-large;
			width: 100%;
			font-family: helvetica;
		}
		.button{
			padding: 12px;
		}
		.administration{
			background-color: #C2C2FF;	
		}
		.bugText{
			padding-top: 17px;
		}
		.lbox{
			width: 135px;
			padding-left: 10px;	
			margin-right: 10px;
		}
		.grid{
			height: 100%;
			background-color: #FFFFFF;
		}
	</ui:style>
	<g:FormPanel styleName="{style.administration}" ui:field="adminForm">
		<g:VerticalPanel width="100%">
			<g:Label styleName="{style.heading}"> Administration</g:Label>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:Label styleName="{style.strange}"> Exercise Name: </g:Label>
				<g:TextBox width="93%" ui:field="fileName" name="fileName"> </g:TextBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:Label styleName="{style.label}"> Solution: </g:Label>
				<g:FileUpload ui:field="solution" name="Solution"></g:FileUpload>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:Label styleName="{style.label}"> Skeleton: </g:Label>
				<g:FileUpload ui:field="skeleton" name="Skeleton"></g:FileUpload>
			</g:HorizontalPanel>
			<g:Label> Description: </g:Label>	
			<g:TextArea height="200px" width="270px" ui:field="desc" name="desc"></g:TextArea>
			<g:CheckBox ui:field="visible" height="40px" name="visible">Make Visible</g:CheckBox>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:SubmitButton styleName="{style.button}" ui:field="addButton"> Add </g:SubmitButton>
				<g:Label styleName="{style.bugText}">Click twice to add skeletons</g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:ListBox ui:field="exercises" styleName="{style.lbox}"></g:ListBox>
				<g:Button ui:field="btnAdminReview"> Review </g:Button>
			</g:HorizontalPanel>
				<g:Grid ui:field="grdAdminReview" styleName="{style.grid}">
				</g:Grid>
		</g:VerticalPanel>
	</g:FormPanel>
</ui:UiBinder> 