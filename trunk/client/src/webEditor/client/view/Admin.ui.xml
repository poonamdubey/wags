<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.label {
			padding-top: 8px;
			text-align: left;
			padding-right: 10px;
			width: 80px;
		}
		.strange{
			padding-top: 8px;
			padding-right: 10px;	
		}
		.filePanel {
			height: 35px;
			text-align: center;	
		}
		.heading{
			padding-top: 20px;
			padding-bottom: 20px;
			padding-left: 80px;
			font-size: 	x-large;
			width: 100%;
			font-family: helvetica;
		}
		.button{
			padding: 12px;
		}
		.administration{
			background-color: #A0A0FF;	
		}
	</ui:style>
	<g:FormPanel styleName="{style.administration}" ui:field="form">
		<g:VerticalPanel width="100%">
			<g:Label styleName="{style.heading}"> Administration</g:Label>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:Label styleName="{style.label}">Current ID:</g:Label>
				<g:TextBox width="100%" ui:field="ID" enabled="false"> </g:TextBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:Label styleName="{style.label}"> Solution: </g:Label>
				<g:FileUpload ui:field="solution" name="Solution"></g:FileUpload>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:Label styleName="{style.label}"> Skeleton: </g:Label>
				<g:FileUpload ui:field="skeleton" name="Skeleton"></g:FileUpload>
			</g:HorizontalPanel>
			<g:Label> Description: </g:Label>	
			<g:TextBox height="200px" width="270px" ui:field="desc"></g:TextBox>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:Label styleName="{style.strange}"> Exercise Name: </g:Label>
				<g:TextBox width="93%" ui:field="fileName"> </g:TextBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:SubmitButton styleName="{style.button}" ui:field="addButton"> Add </g:SubmitButton>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:FormPanel>
</ui:UiBinder> 